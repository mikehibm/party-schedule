  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "protocol": "inspector",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect=3000"],
      "program": "${workspaceFolder}/bin/www",
      "port": 3000,
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
